{
  "name": "so-simple-portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "rss-update": "node ./src/rss/rss-parser.mjs",
    "rss-translate": "node ./src/rss/translator.cjs",
    "rss": "npm run rss-update && npm run rss-translate",
    "summary-copy": "node ./src/who/importer.mjs",
    "summary-summarize": "node ./src/who/summarize.cjs",
    "summary-translate": "node ./src/who/translator.cjs",
    "summary": "npm run summary-copy && npm run summary-summarize && npm run summary-translate",
    "timeline-copy": "node ./src/timeline/importer.mjs",
    "timeline-translate": "node ./src/timeline/translator.cjs",
    "timeline": "npm run timeline-copy && npm run timeline-translate",
    "links-copy": "node ./src/links/importer.mjs",
    "links-translate": "node ./src/links/translator.cjs",
    "links": "npm run links-copy && npm run links-translate",
    "all": "npm run rss && npm run summary && npm run timeline && npm run links",
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "npm i && npm run all && npm run astro build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/node": "^6.0.4",
    "@astrojs/react": "^3.0.3",
    "@astrojs/tailwind": "^5.0.2",
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "ai": "^2.2.25",
    "astro": "^3.6.4",
    "dotenv": "^16.3.1",
    "framer-motion": "^10.16.16",
    "fs-extra": "^11.1.1",
    "lucide-astro": "^0.293.0",
    "lucide-react": "^0.294.0",
    "open-graph-scraper": "^6.3.0",
    "openai": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rss-parser": "^3.13.0",
    "styled-jsx": "^5.1.2",
    "tailwindcss": "^3.3.3",
    "typewriter-effect": "^2.21.0"
  },
  "devDependencies": {
    "kolorist": "^1.8.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.1"
  }
}
