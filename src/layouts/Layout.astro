---
import About from "../components/About.astro";
import Blogs from "../components/Blogs.astro";
import Contact from "../components/Contact.astro";
import Links from "../components/Links.astro";
import Navbar from "../components/Navbar.astro";
import Timeline from "../components/Timeline.astro";
import Who from "../components/Who.astro";
import { ViewTransitions } from "astro:transitions";
import { fade } from "astro:transitions";
import { slide } from "astro:transitions";
---

<head>
  <ViewTransitions />
</head>
<body class="w-screen h-screen bg-gray-200 flex justify-center items-center">
  <div
    class="h-full max-w-7xl grid md:grid-cols-2 md:py-4 md:pl-4 grid-cols-1 overflow-y-auto md:overflow-visible"
  >
    <div
      class="flex justify-center items-center md:min-h-0 min-h-screen"
      transition:animate={fade({ duration: "0.1s" })}
    >
      <div class="md:p-4 p-2">
        <div id="about">
          <About />
          <Contact />
          <Links slice="3" />
        </div>
      </div>
    </div>

    <div class="md:overflow-scroll flex flex-col md:pr-4 p-2 scroll-smooth">
      <div id="who"><Who /></div>
      <div id="blogs"><Blogs /></div>
      <div id="timeline" class="mb-16"><Timeline /></div>
    </div>
  </div>
  <Navbar />
</body>
<style>
  body {
    scroll-behavior: smooth;
  }
</style>
