---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const items = `src/timeline/items-${lang}.json`;
import { readFileSync } from "fs";
import path from "path";
let data;
try {
  const rawData = readFileSync(items, "utf8");
  data = JSON.parse(rawData);
  console.log(data);
} catch (error) {
  console.error("Error reading the file:", error);
  data = null;
}

import {
  ChevronLeft,
  ChevronRight,
  StickyNote,
  Search,
  Briefcase,
} from "lucide-astro";
import ReadMoreLink from "./ReadMoreLink.astro";
---

<div
  class="snap-center w-full h-full py-4 px-2 md:px-4 mb-16 min-h-screen flex flex-col justify-center items-center"
>
  <div class="flex flex-col justify-center items-center">
    <div class="flex flex-col w-full">
      <div class="flex md:flex-col">
        <Briefcase class="h-10 w-10" />
        <div class="flex flex-row">
          <h2 class="text-3xl md:text-4xl md:my-2 font-mono text-gray-800">
            What I did
          </h2>
        </div>
      </div>
    </div>

    <div id="scrollContainer" class="mt-4 py-3 relative font-noto">
      {
        data
          .slice(0, 6)
          .map(({ date, title, image, description, link }: any) => (
            <div class="w-full bg-gray-200 p-4 border-s-2  border-gray-400 relative">
              <span class="absolute -start-1.5 w-3 h-3 mt-1.5 rounded-full bg-gray-400" />
              <div class="w-full">
                <p class="text-gray-600 text-sm font-mono pt-0.5">{date}</p>
                <h3 class="text-base font-bold font-noto pt-2">{title}</h3>
                <p class="mt-2 text-sm">{description}</p>
              </div>
              <img
                loading="lazy"
                src={image}
                alt=""
                class="object-cover max-h-48 rounded-xl ml-4 mt-4"
                loading="lazy"
              />
              <div class="">
                <a href={link} class="h-full ml-4">
                  <ReadMoreLink link={link} />
                </a>
              </div>
            </div>
          ))
      }
    </div>
  </div>
</div>
