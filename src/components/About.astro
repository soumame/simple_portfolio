---
import yourinfo from "../../YOURINFO.json";

import { getLangFromUrl } from "../i18n/utils";
---

<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
/>
<style>
  .material-symbols-rounded {
    font-variation-settings:
      "FILL" 1,
      "wght" 400,
      "GRAD" 200,
      "opsz" 48;
    font-size: 40px;
  }
</style>

<div
  class="snap-center w-full h-full flex justify-center items-center flex-col relative sm:p-4 p-2"
>
  {
    yourinfo.map(({ name, bio, icon }) => (
      <>
        <div class="flex flex-row gap-2 items-center justify-center">
          <img src={icon} class="w-16 h-16 rounded-full shadow-white" />
          <h1 class="text-3xl ml-2 font-mono tracking-widest text-center text-gray-600 drop-shadow-md">
            {name}
          </h1>
        </div>
        <p class="text-lg text-center font-noto mt-4 text-gray-600 drop-shadow-md">
          {bio}
        </p>
      </>
    ))
  }
  <span
    class="fa-solid fa-angles-down fill-orange-500 text-orange-500 w-12 h-12 absolute bottom-10 animate-pulse"
  ></span>
</div>
