---
import contacts from "../../../YourSNS.json";

import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<script src="https://kit.fontawesome.com/e09742380f.js" crossorigin="anonymous"
></script>
<div class="snap-center w-full h-full sm:p-4 p-2">
  <div class="flex md:flex-col">
    <span
      class="fa-solid fa-user fill-gray-300 text-gray-300 w-8 h-8 md:w-12 md:h-12 my-2"
    ></span>
    <h2 class="text-4xl my-2 text-gray-300">Contact</h2>
  </div>
  <div
    class="gap-4 md:grid-cols-3 grid-cols-2 grid-flow-row grid mt-2 h-[80%] overflow-y-auto"
  >
    {
      contacts.map(({ label, link, icon }) => (
        <div
          class="bg-gray-300 rounded-3xl border-gray-300 relative flex jusify-center items-center aspect-square max-w-36 max-h-36 p-4 
         hover:dropshadow-xl shadow-white hover:bg-gray-100 transition duration-500 ease-in-out col-span-auto"
        >
          <a href={link} class="absolute w-full h-full right-0 top-0" />
          <span
            class={`fill-gray-800 text-gray-800 w-1/3 h-1/3 mx-auto ${icon}`}
            aria-label="{label}"
          />
        </div>
      ))
    }
  </div>
</div>
<style>
  @keyframes label {
    from {
      opacity: 0;
      clip-path: circle(0%);
    }
    to {
      opacity: 1;
      clip-path: circle(100%);
    }
  }
</style>
